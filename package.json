{
  "name": "run-exe",
  "version": "1.0.3",
  "engines": {
    "vscode": "^1.14.0"
  },
  "icon": "images/icon.png",
  "activationEvents": [
    "run-exe.run"
  ],
  "description": "An .exe Runner for Visual Studio Code.",
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "prettier --check .",
    "lint:fix": "prettier --write .",
    "watch": "tsc -watch -p ./"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Harry-Hopkinson/run-exe.git"
  },
  "keywords": [
    "exe",
    "executable"
  ],
  "author": "HarryHopkinson",
  "publisher": "HarryHopkinson",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Harry-Hopkinson/run-exe/issues"
  },
  "homepage": "https://github.com/Harry-Hopkinson/run-exe#readme",
  "devDependencies": {
    "@types/node": "^18.14.2",
    "@types/vscode": "^1.14.0",
    "prettier": "^2.8.4",
    "typescript": "^5.0.0",
    "vscode": "^1.1.34"
  },
  "contributes": {
    "commands": [
      {
        "command": "run-exe.run",
        "title": "Run Executable",
        "icon": {
          "light": "images/light.svg",
          "dark": "images/dark.svg"
        }
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "run-exe.run",
          "when": "resourceExtname == .exe"
        }
      ],
      "editor/title": [
        {
          "command": "run-exe.run",
          "group": "navigation",
          "when": "resourceExtname == .exe"
        }
      ],
      "editor/title/context": [
        {
          "command": "run-exe.run",
          "group": "navigation",
          "when": "resourceExtname == .exe"
        }
      ],
      "explorer/context": [
        {
          "command": "run-exe.run",
          "group": "navigation",
          "when": "resourceExtname == .exe"
        }
      ],
      "editor/context": [
        {
          "command": "run-exe.run",
          "group": "navigation",
          "when": "resourceExtname == .exe"
        }
      ]
    }
  }
}
